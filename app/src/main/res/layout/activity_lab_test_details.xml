<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_19"
    tools:context=".LabTestDetailsActivity">

    <!-- App Logo -->
    <TextView
        android:id="@+id/textView_logo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="24*7 Health Care"
        android:textColor="#250581"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Delivery Location -->
    <TextView
        android:id="@+id/textView_logo6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Location: Pune"
        android:layout_marginTop="12dp"
        android:textColor="#50A2C7"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_logo4" />

    <!-- Package Name -->
    <TextView
        android:id="@+id/textViewLDPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Lab Test and Packages"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_logo6" />

    <!-- Multiline Description -->

    <!-- Total Cost -->

    <!-- Add to Cart Button -->

    <EditText
        android:id="@+id/editTextLDTextMultiline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:background="#FFFFFF"
        android:hint="Enter details here..."
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/buttonLDAddToCart"
        app:layout_constraintEnd_toEndOf="@+id/textViewLDTotalCost"
        app:layout_constraintStart_toStartOf="@+id/textViewLDTotalCost"
        app:layout_constraintTop_toBottomOf="@+id/textViewLDTotalCost"
        app:layout_constraintVertical_bias="0.515"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewLDTotalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Total Cost: $999"
        android:textColor="#0B0028"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewLDPackageName"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textViewLDPackageName"
        app:layout_constraintTop_toBottomOf="@+id/textViewLDPackageName" />

    <!-- Back Button -->

    <Button
        android:id="@+id/buttonLDAddToCart"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/button_background"
        android:text="Go To Cart  "
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextLDTextMultiline"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/editTextLDTextMultiline"
        app:layout_constraintTop_toBottomOf="@id/textViewLDTotalCost"
        app:layout_constraintVertical_bias="0.669" />

    <Button
        android:id="@+id/buttonLDBack"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:backgroundTint="#250580"
        android:text="BACK "
        android:textColor="@color/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonLDAddToCart"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonLDAddToCart"
        app:layout_constraintTop_toBottomOf="@id/buttonLDAddToCart"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>

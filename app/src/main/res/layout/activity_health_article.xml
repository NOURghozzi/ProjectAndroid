<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_23"
    tools:context=".HealthArticleActivity">

    <TextView
        android:id="@+id/textViewHATitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dentist"
        android:textColor="#50A2C7"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_logo3HA"
        app:layout_constraintStart_toStartOf="@+id/textView_logo3HA"
        app:layout_constraintTop_toBottomOf="@+id/textView_logo3HA" />

    <TextView
        android:id="@+id/textView_logo3HA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="24*7 Health Care"
        android:textColor="#250581"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewHA"
        android:layout_width="317dp"
        android:layout_height="483dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@id/textViewHATitle"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="@id/textViewHATitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewHATitle" />

    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#BADCE6"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewHA"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/iconProfile"
            android:layout_width="75dp"
            android:layout_height="56dp"
            android:layout_marginEnd="56dp"
            android:contentDescription="@string/profile"
            android:padding="4dp"
            android:src="@drawable/icons8" />

        <ImageView
            android:id="@+id/iconChat"
            android:layout_width="75dp"
            android:layout_height="56dp"
            android:contentDescription="@string/chat"
            android:padding="4dp"
            android:src="@drawable/img_10" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
